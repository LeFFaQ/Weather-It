<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Theme.WeatherTutorial" parent="android:Theme.Material.Light.NoActionBar">
        <item name="android:statusBarColor">@color/purple_700</item>
    </style>


    <style name="Theme.CustomSplashScreen" parent="Theme.SplashScreen">

        <item name="windowSplashScreenBackground">@color/purple_500</item>
        <item name="windowSplashScreenAnimatedIcon">@drawable/ic_launcher_foreground</item>
